package com.senac.exercicio1;

import com.senac.SimpleJava.Console;

public class Circle {
	private double area;
	private double circu;
	
	private double vetor[] = new double[5];

	private double x;
	private double y;
	private double r;

	double dx = Math.pow(x2 - x1, 2) + Math.pow(y1 - y2, 2);
	double dy = Math.pow(r1 + r2, 2);
	
	public double setValue(double x, double y, double r) {
		this.r = r;
		this.setup();
		
	}

	private void area() {
		this.area = 3.14 * Math.pow(this.r, 2);
		this.vetor[1] = this.area;
	}

	private void circunferencia() {
		this.circu = 2 * 3.14 * this.r;
		this.vetor[2] = this.circu;
	}

	public void hasCollision(double c1, double c2) {
		this.dx = Math.pow(x2 - x1, 2) + Math.pow(y1 - y2, 2);
		this.dy = Math.pow(this.r, 2);

		if (this.dx < this.dy) {
			Console.println("Collision");
		} else {
			Console.println("Not Collision");
		}
	}

	private void setup() {
		this.area();
		this.circunferencia();
		this.vetor[3] = this.r;
	}

	public String toString() {
		return "Área " + this.area + "\nCircunferência " + this.circu;
	}

}

