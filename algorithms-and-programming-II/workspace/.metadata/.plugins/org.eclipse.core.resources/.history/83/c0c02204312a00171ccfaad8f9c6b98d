package com.senac.exercicio1;

import com.senac.SimpleJava.Console;

public class Circle {
	private double area;
	private double circu;
	private double raio;
	
//	private double x;
//	private double y;
	private double dx;
	private double dy;
	
	public void setRaio(double r) {
		this.raio = r;
		this.setup();
	}

	private void area() {
		this.area = 3.14 * Math.pow(this.raio, 2);
	}
	
	private void circunferencia() {
		this.circu = 2 * 3.14 * this.raio;
	}
	
	public void hasCollision(double x1, double y1, double x2, double y2) {
		this.dx = Math.pow(x2-x1, 2) + Math.pow(y1-y2, 2);
		this.dy = Math.pow(this.raio, 2);
		
		 if(this.dx < this.dy) {
			 Console.println("Collision");
		 } else {
			 Console.println("Not Collision");
		 }
	}
	
	private void setup() {
		this.area();
		this.circunferencia();
	}

	public String toString() {
		return "Área " + this.area + "\nCircunferência " +  this.circu;
	}

}
