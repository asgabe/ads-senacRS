package com.senac.exercicio1;

public class Context {
	double area;
	double diametro;
	double circ;
	double pi = 3.1416;
	
	
	private void area(double r) {
		r = 2;

		this.area = this.pi * (r * r);
	}
	
	private void diamentro() {
		this.diametro = Math.sqrt(this.area) / this.pi;
	}
	
	private void circunferencia() {
		this.circ = this.pi * this.diametro;
	}
	
}
