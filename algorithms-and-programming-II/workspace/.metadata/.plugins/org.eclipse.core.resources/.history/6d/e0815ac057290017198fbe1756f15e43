package com.senac.exercicio1;

import com.senac.SimpleJava.Console;

public class Main {
	public void run () {
		Circle circle;
		circle = new Circle();
		
		circle.setRaio(2);
//		Console.println(circle.toString());
		
		double x1 = 2;
		double y1 = 2;
		double r1 = 2;

		double x2 = 4;
		double y2 = 4;
		double r2 = 2;
		
//		int x1 = 3;
//		int y1 = 4;
//		int x2 = 6;
//		int y2 = 8;
//		int radius1 = 3;
//		int radius2 = 5;		
		
//		double rest = Math.pow(x2-x1, 2) + Math.pow(y1-y2, 2);
//		double raio = Math.pow(r1 + r2, 2);
		
		if(Math.sqrt( ( x2-x1 ) * ( x2-x1 )  + ( y2-y1 ) * ( y2-y1 ) ) < ( r1 + r2 )) {
			Console.println("Collision");
		} else {
			Console.println("Not Collision");
		}
	}
}
