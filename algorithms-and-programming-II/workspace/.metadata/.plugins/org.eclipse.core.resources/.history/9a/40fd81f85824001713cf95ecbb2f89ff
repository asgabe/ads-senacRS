package com.senac.exercicio1;

public class Context {
	private double area;
	private double circ;
	private double pi = 3.1416;
	
	public double area(double r) {
		this.area = this.pi * (r * r);

		return this.area;
	}
	
	public double circunferencia(double diametro) {
		this.circ = this.pi * diametro;
		
		return this.circ;
	}
}
